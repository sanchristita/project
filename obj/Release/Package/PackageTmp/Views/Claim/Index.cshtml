@model IEnumerable<ChemisTrackCrud.Models.ClaimsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-dollar padd-right"></span>Claim</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Add Claim", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Student", "Index", "Student", null, new {@class="btn btn-success"})
    @Html.ActionLink("Equipment", "Index", "Equipment", null, new { @class="btn btn-danger"})
    @Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

<div class="table-responsive clear-all">
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Student.RegistrationNumber)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ClaimDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.equipment.EquipmentName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ClaimAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Student.RegistrationNumber)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ClaimDate)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.equipment.EquipmentName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ClaimAmount)
        </td>
        
        <td class="text-center">
            <a href="@Url.Action("Edit", new { id= item.ClaimID})" class="actions"><span class="icon-edit icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Details", new { id = item.ClaimID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id = item.ClaimID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}

</table>
</div>