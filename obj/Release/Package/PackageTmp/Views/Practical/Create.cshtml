@model ChemisTrackCrud.Models.PracticalsModel

@{
    ViewBag.Title = "Create";
}

<h2 class="item-title"><span class="icon-practical padd-right"></span>Create New Practical</h2>

@using (Html.BeginForm("Create","Practical",FormMethod.Post)) {
    @Html.ValidationSummary(true)


        <div class="form-group clearfix">
            @Html.LabelFor(model => model.PracticalNumber, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.PracticalNumber, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.PracticalNumber)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.PracticalTitle, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.PracticalTitle, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.PracticalTitle)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.StudentCount, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.StudentCount, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.StudentCount)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.ChemicalID, "chemicalmodel", new {@class = "col-sm-4 text-right" })
            @Html.DropDownList("ChemicalID", (IEnumerable<SelectListItem>)ViewBag.ChemicalID, new { @class= "col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.ChemicalID)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.PerStudentUsage, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.PerStudentUsage, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.PerStudentUsage)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.Indicators, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.Indicators, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.Indicators)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentID, "equipmentmodel", new {@class = "col-sm-4 text-right" })
            @Html.DropDownList("EquipmentID", (IEnumerable<SelectListItem>)ViewBag.EquipmentID, new { @class= "col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.EquipmentID)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.PerStudentEquipment, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.PerStudentEquipment, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.PerStudentEquipment)
        </div>

        <p class="col-sm-10 text-center">
            <input type="submit" value="Create"  class="btn btn-success"/>
            @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
        </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
