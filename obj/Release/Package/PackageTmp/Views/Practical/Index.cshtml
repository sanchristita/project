@model IEnumerable<ChemisTrackCrud.Models.PracticalsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-practical padd-right"></span>Practical</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Add Practical", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

<div class="table-responsive clear-all">
    <table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.PracticalNumber)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.PracticalTitle)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.StudentCount)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.chemicalmodel.ChemicalName)
        </th>
        <th class="text-center">
            Total Usage
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Indicators)
        </th>
        <th class="text-center">
            Equipment Name
        </th>
        <th class="text-center">
            Total Equipment
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.PracticalNumber)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.PracticalTitle)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.StudentCount)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.chemicalmodel.ChemicalName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.totalUsage)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Indicators)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Equipmentmodel.EquipmentName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.TotalEquipment)
        </td>
        <td class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id=item.PracticalID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PracticalID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PracticalID })
        </td>
    </tr>
}

</table>
