@model ChemisTrackCrud.Models.PracticalsModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="item-title"><span class="icon-practical padd-right"></span>Edit Practical</h2>

@using (Html.BeginForm("Edit", "Practical", FormMethod.Post))
{
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.PracticalID)

        <div class="editor-label">
            @Html.LabelFor(model => model.PracticalNumber)
            @Html.EditorFor(model => model.PracticalNumber)
            @Html.ValidationMessageFor(model => model.PracticalNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PracticalTitle)
            @Html.EditorFor(model => model.PracticalTitle)
            @Html.ValidationMessageFor(model => model.PracticalTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentCount)
            @Html.EditorFor(model => model.StudentCount)
            @Html.ValidationMessageFor(model => model.StudentCount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ChemicalID, "chemicalmodel")

            @Html.DropDownList("ChemicalID", String.Empty)
            @Html.ValidationMessageFor(model => model.ChemicalID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PerStudentUsage)
            @Html.EditorFor(model => model.PerStudentUsage)
            @Html.ValidationMessageFor(model => model.PerStudentUsage)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Indicators)
            @Html.EditorFor(model => model.Indicators)
            @Html.ValidationMessageFor(model => model.Indicators)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentID, "equipmentmodel")
            @Html.DropDownList("EquipmentID", String.Empty)
            @Html.ValidationMessageFor(model => model.EquipmentID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PerStudentEquipment)
            @Html.EditorFor(model => model.PerStudentEquipment)
            @Html.ValidationMessageFor(model => model.PerStudentEquipment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
