@model ChemisTrackCrud.Models.AccountModel
@{
    ViewBag.Title = "LogIn";
}


@using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "form-login" }))
{
    
    <h2 class="login-title">Log In</h2>
    
    <div class="form-group">
        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control input-lg", placeholder="Username" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Password, new {@class = "form-control input-lg", type="password", placeholder="Password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <input type="submit" value="Login" class="btn btn-success btn-lg btn-block"/>
    @Html.ValidationSummary(true, "Login failed");
}

