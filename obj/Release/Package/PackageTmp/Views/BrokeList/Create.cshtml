@model ChemisTrackCrud.Models.BrokeListsModel

@{
    ViewBag.Title = "Create";
}

<h2>Create New Broke Equipment</h2>

@using (Html.BeginForm("Create", "BrokeList", FormMethod.Post))
{
    @Html.ValidationSummary(true)

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.BrokeDate, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.BrokeDate, new {@class = "col-sm-6 form-control datepicker" })
            @Html.ValidationMessageFor(model => model.BrokeDate)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentID, "Equipments", new {@class = "col-sm-4 text-right" })
            <div class="col-sm-6 form-control">@Html.DropDownList("EquipmentID", String.Empty)</div>
            @Html.ValidationMessageFor(model => model.EquipmentID)
           
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.UsedQuantity, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.UsedQuantity, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.UsedQuantity)
        </div>

        <!--
        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentStockCount, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentStockCount, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentStockCount)
        </div>
        -->

        <p class="col-sm-10 text-center">
            <input type="submit" value="Create" class="btn btn-success" />
             @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
        </p>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
