@model ChemisTrackCrud.Models.BrokeListsModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>BrokeListsModel</legend>

        @Html.HiddenFor(model => model.BrokeListsID)

        <div class="editor-label">
            @Html.LabelFor(model => model.BrokeDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BrokeDate)
            @Html.ValidationMessageFor(model => model.BrokeDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentID, "Equipments")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EquipmentID", String.Empty)
            @Html.ValidationMessageFor(model => model.EquipmentID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UsedQuantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UsedQuantity)
            @Html.ValidationMessageFor(model => model.UsedQuantity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EquipmentStockCount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EquipmentStockCount)
            @Html.ValidationMessageFor(model => model.EquipmentStockCount)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
