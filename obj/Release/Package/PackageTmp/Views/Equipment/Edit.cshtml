@model ChemisTrackCrud.Models.EquipmentsModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="item-title"><span class="icon-inventory padd-right"></span>Edit Equipments</h2>

@using (Html.BeginForm("Edit","Equipment",FormMethod.Post)) {
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.EquipmentID)

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentName, new { @class="col-sm-4 text-right"})
            @Html.TextBoxFor(model => model.EquipmentName, new { @class="col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.EquipmentName)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.Model, new { @class="col-sm-4 text-right"})
            @Html.TextBoxFor(model => model.Model, new { @class="col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.Model)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.Remarks, new { @class="col-sm-4 text-right"})
            @Html.TextBoxFor(model => model.Remarks, new { @class="col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.ClaimType, new { @class="col-sm-4 text-right"})
            @Html.CheckBoxFor(model => model.ClaimType, new { @class="col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.ClaimType)
        </div>
    
        <div class="form-group clearfix">
            @Html.LabelFor(model => model.claimStandardPrice, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.claimStandardPrice, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.claimStandardPrice)
        </div>

        <p  class="col-sm-10 text-center">
            <input type="submit" value="Save"  class="btn btn-success" />
            @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
        </p>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
