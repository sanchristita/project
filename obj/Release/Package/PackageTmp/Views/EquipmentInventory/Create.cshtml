@model ChemisTrackCrud.Models.EquipmentsInventoryModel

@{
    ViewBag.Title = "Create";
}

<h2 class="item-title"><span class="icon-inventory padd-right"></span>Create New Chemical Stock</h2>

@using (Html.BeginForm("Create","EquipmentInventory",FormMethod.Post)) {
    @Html.ValidationSummary(true)

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentID, "Equipments", new {@class = "col-sm-4 text-right" })
            @Html.DropDownList("EquipmentID", (IEnumerable<SelectListItem>)ViewBag.EquipmentID, new { @class= "col-sm-6 form-control"})
            @Html.ValidationMessageFor(model => model.EquipmentID)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentOrderDate, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentOrderDate, new {@class = "col-sm-6 form-control datepicker"})
            @Html.ValidationMessageFor(model => model.EquipmentOrderDate)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentOrderNo, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentOrderNo, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentOrderNo)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentSupplierName, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentSupplierName, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentSupplierName)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentQuantity, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentQuantity, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentQuantity)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentUnitPrice, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentUnitPrice, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentUnitPrice)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.GRN_No, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.GRN_No, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.GRN_No)
        </div>

        <p class="col-sm-10 text-center">
            <input type="submit" value="Create" class="btn btn-success" />
            @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
        </p>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
