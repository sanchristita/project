@model IEnumerable<ChemisTrackCrud.Models.EquipmentsInventoryModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-inventory padd-right"></span>Equipments Stock</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Create New Stock", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Defects", "Index", "OrderDefectEquipment", null, new {@class="btn btn-warning"})
    @Html.ActionLink("Equipments", "Index", "Equipment", null, new {@class="btn btn-success"})
    @Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

@using (Html.BeginForm("Index", "EquipmentInventory", FormMethod.Get, new { @class = "pull-left search-form" }))
{
    <p>
        Equipment Name : @Html.TextBox("strSearch", null, new {@class="form-control"})
       
        <input type="Submit" class="btn btn-default" value="Search"/>

        @Html.ActionLink("Report", "Report", null, new {@class="btn btn-info"})
    </p> 
}

<div class="table-responsive clear-all"">
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Equipments.EquipmentName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentOrderDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentOrderNo)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentSupplierName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentQuantity)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentUnitPrice)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentAmount)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.GRN_No)
        </th>
        <th class="text-center">
                @Html.Label("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Equipments.EquipmentName)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentOrderDate)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentOrderNo)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentSupplierName)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentQuantity)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentUnitPrice)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentAmount)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.GRN_No)
        </td>
 
        <td class="text-center">
            <a href="@Url.Action("Edit", new { id=item.EquipmentInventoryID })" class="actions"><span class="icon-edit icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Details", new { id=item.EquipmentInventoryID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id=item.EquipmentInventoryID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}

</table>

</div>
