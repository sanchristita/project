@model ChemisTrackCrud.Models.OrderDefectEquipmentsModel

@{
    ViewBag.Title = "Create";
}

<h2 class="item-title"><span class="icon-inventory padd-right"></span>Create Defect Equipment</h2>

@using (Html.BeginForm("Create", "OrderDefectEquipment", FormMethod.Post))
{
    @Html.ValidationSummary(true)

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.OrderNo, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.OrderNo, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.OrderNo)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmenDefectDate, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmenDefectDate, new {@class = "col-sm-6 form-control datepicker" })
            @Html.ValidationMessageFor(model => model.EquipmenDefectDate)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.EquipmentName, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.EquipmentName, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.EquipmentName)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.DefectEquimentsQuantity, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.DefectEquimentsQuantity, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.DefectEquimentsQuantity)
        </div>

        <div class="form-group clearfix">
            @Html.LabelFor(model => model.DefectEquipmentSupplierName, new {@class = "col-sm-4 text-right" })
            @Html.TextBoxFor(model => model.DefectEquipmentSupplierName, new {@class = "col-sm-6 form-control" })
            @Html.ValidationMessageFor(model => model.DefectEquipmentSupplierName)
        </div>

         <p class="col-sm-10 text-center">
            <input type="submit" value="Create" class="btn btn-success"/>
            @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
        </p>
}   

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
