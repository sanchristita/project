@model IEnumerable<ChemisTrackCrud.Models.ChemicalsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-chemical padd-right"></span>Chemical Properties</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Add Chemical", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Stocks", "Index", "ChemicalInventory", null, new {@class="btn btn-danger"})
    @Html.ActionLink("Used List", "Index", "UsedList", null, new { @class="btn btn-danger"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

@using (Html.BeginForm("Index", "Chemical", FormMethod.Get, new { @class = "pull-left search-form" }))
{
    <p>
        Chemical Name : @Html.DropDownList("ChemicalNames", "All")
        IUPAC Name : @Html.TextBox("strSearch", null, new {@class="form-control"})

        <input type="Submit" class="btn btn-default" value="Search"/>
    </p> 
}

<div class="table-responsive clear-all">
    <table class="table table-striped table-bordered">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ChemicalName)
            </th>

            <th class="text-center">
                @Html.DisplayNameFor(model => model.ScientificName)
            </th>

            <th class="text-center">
                Stock Count
            </th>

            <!--
            <th>
                @Html.DisplayNameFor(model => model.Nature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Odour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeltingPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoilingPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flammable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toxicity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HazardousWaste)
            </th>
                
            --> 
            
            <th class="text-center">
                @Html.Label("Actions")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ChemicalName)
                </td>

                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ScientificName)
                </td>

                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.StockCount)
                </td>

                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ChemicalID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ChemicalID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ChemicalID })
                </td>
            </tr>
        }

    </table>
</div>
