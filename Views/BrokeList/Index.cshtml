@model IEnumerable<ChemisTrackCrud.Models.BrokeListsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-inventory padd-right"></span>Broken Equipments</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Add Broken Equipments ", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Return to Stock", "Index", "EquipmentInventory", null, new {@class="btn btn-warning"})
    @Html.ActionLink("Return to Equipments", "Index", "Equipment", null, new {@class="btn btn-success"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

<div class="table-responsive clear-all">
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.BrokeDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Equipments.EquipmentName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UsedQuantity)
        </th>
        
        <th class="text-center">
            @Html.Label("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.BrokeDate)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Equipments.EquipmentName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.UsedQuantity)
        </td>
        

        <td class="text-center icon-padd-top">
            <a href="@Url.Action("Edit", new { id=item.BrokeListsID })" class="actions"><span class="icon-edit icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Details", new { id=item.BrokeListsID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id=item.BrokeListsID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}

</table>
</div>