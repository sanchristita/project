@model IEnumerable<ChemisTrackCrud.Models.UsedListsModel>

@{
    ViewBag.Title = "Report";
    ViewBag.UsedLists = "All";
}

<h2 class="item-title"><span class="icon-chemical padd-right"></span>Chemical Usage Report</h2>

<p class="text-right pull-right">
    <a href="#" class="btn btn-info print">Print Report</a>

    @Html.ActionLink("Chemical stock", "Index", "ChemicalInventory", null, new {@class="btn btn-warning"})
    @Html.ActionLink("Chemicals", "Index", "Chemical", null, new {@class="btn btn-success"})
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })
</p>


<!-- Search chemicals by its Chemical Name or IUPAC Name -->
@using (Html.BeginForm("Index", "UsedList", FormMethod.Get, new { @class = "pull-left search-form" }))
{
    <p>
        @Html.DropDownList("ChemicalUsedListNames", null, "All", new { @class="form-control"})
        @Html.TextBox("strSearch", null, new {@class="form-control", placeholder="IUPAC Name"})
        @Html.TextBox("startDate", null, new { @class = "form-control datepicker", placeholder="Start Date" })
        @Html.TextBox("endDate", null, new { @class = "form-control datepicker", placeholder="End Date" })

        <input type="Submit" class="btn btn-default"  value="Filter"/>
    </p> 
}

<div class="table-responsive clear-all print-area">
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UsedDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.PracticalNo)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.YearOfCourse)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Chemicals.ChemicalName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UsedQuantity)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ChemicalStockCount)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.UsedDate)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.PracticalNo)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.YearOfCourse)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Chemicals.ChemicalName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.UsedQuantity)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ChemicalStockCount)
        </td>
    </tr>
}

</table>
</div>