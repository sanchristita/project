@model IEnumerable<ChemisTrackCrud.Models.UsedListsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-chemical padd-right"></span>Chemical Usage</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Add Used Chemicals ", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Return to Stock", "Index", "ChemicalInventory", null, new {@class="btn btn-warning"})
    @Html.ActionLink("Return to Chemicals", "Index", "Chemical", null, new {@class="btn btn-success"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

<!-- Search chemicals by its Chemical Name or IUPAC Name -->
@using (Html.BeginForm("Index", "UsedList", FormMethod.Get))
{
    <p>
        Chemical Name : @Html.DropDownList("ChemicalUsedListNames","All")
        IUPAC Name : @Html.TextBox("strSearch")

        <input type="Submit" value="Search"/>
    </p> 
}

<div class="table-responsive clear-all">
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UsedDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.PracticalNo)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.YearOfCourse)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Chemicals.ChemicalName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UsedQuantity)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ChemicalStockCount)
        </th>
        <th class="text-center">
            @Html.Label("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.UsedDate)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.PracticalNo)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.YearOfCourse)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Chemicals.ChemicalName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.UsedQuantity)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ChemicalStockCount)
        </td>

        <td class="text-center icon-padd-top">
            <a href="@Url.Action("Edit", new { id=item.UsedListsID })" class="actions"><span class="icon-edit icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Details", new { id=item.UsedListsID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id=item.UsedListsID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}

</table>
</div>