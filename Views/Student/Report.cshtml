@model IEnumerable<ChemisTrackCrud.Models.StudentsModel>

@{
    ViewBag.Title = "Report";
    ViewBag.Students = "All";
}

<h2 class="item-title"><span class="icon-student padd-right"></span>Students Report</h2>

<p class="text-right pull-right">
    <a href="#" class="btn btn-info print">Print Report</a>

    @Html.ActionLink("Students", "Index", "Student", null, new {@class="btn btn-success"})
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-default" })
</p>


@using (Html.BeginForm("Index", "Student", FormMethod.Get, new { @class = "pull-left search-form" }))
{
    <p>
        Registration Number : @Html.TextBox("strSearch", null, new {@class="form-control"})

        <input type="Submit" class="btn btn-default" value="Filter"/>

    </p> 
}

<div class="table-responsive clear-all print-area">
<table class="table table-striped table-bordered">
    <tr>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Year)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Year)
        </td>
    </tr>
}

</table>
