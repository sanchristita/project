@model IEnumerable<ChemisTrackCrud.Models.StudentsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-student padd-right"></span>Student</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Add Student", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

<div class="table-responsive clear-all">
    <table class="table table-striped table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th class="text-center">
            @Html.Label("Actions")
        </th>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td class="text-center icon-padd-top">
            <a href="@Url.Action("Edit", new { id=item.StudentID })" class="actions"><span class="icon-edit icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Details", new { id=item.StudentID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id=item.StudentID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}
</table>

</div>