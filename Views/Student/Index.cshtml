@model IEnumerable<ChemisTrackCrud.Models.StudentsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-student padd-right"></span>Students</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Create New Student", "Create", null, new {@class="btn btn-info"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>


@using (Html.BeginForm("Index", "Student", FormMethod.Get, new { @class = "pull-left search-form" }))
{
    <p>
        Registration Number : @Html.TextBox("strSearch", null, new {@class="form-control"})

        <input type="Submit" class="btn btn-default" value="Search"/>

        @Html.ActionLink("Report", "Report", null, new {@class="btn btn-info"})
    </p> 
}

<div class="table-responsive clear-all">
<table class="table table-striped table-bordered">
    <tr>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th class="text-center">
                @Html.Label("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td class="text-center icon-padd-top">
            <a href="@Url.Action("Edit", new { id=item.StudentID })" class="actions"><span class="icon-edit icon-big"></span></a>&nbsp&nbsp 
            <a href="@Url.Action("Details", new { id=item.StudentID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id=item.StudentID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}

</table>
