@model ChemisTrackCrud.Models.StudentsModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="item-title"><span class="icon-student padd-right"></span>Students</h2>

<h3>Are you sure you want to delete this?</h3>


    <div class="display-label">
        <div class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.StudentName) : </div>
        <div class="col-sm-6">@Html.DisplayFor(model => model.StudentName) </div>
    </div>

    <div class="display-label">
        <div class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.RegistrationNumber) : </div>
        <div class="col-sm-6">@Html.DisplayFor(model => model.RegistrationNumber) </div>
    </div>

    <div class="display-label">
        <div class="col-sm-4 text-right">@Html.DisplayNameFor(model => model.Year) : </div>
