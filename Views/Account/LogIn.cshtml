@model ChemisTrackCrud.Models.AccountModel
@{
    ViewBag.Title = "LogIn";
}


@using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "form-login" }))
{
    
    <h2>LogIn</h2>
    
    <div class="form-group">
        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Password, new {@class = "form-control", type="password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <input type="submit" value="Login" class="btn btn-success"/>
    @Html.ValidationSummary(true, "Login failed");
}

