        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentUnitPrice)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.EquipmentAmount)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.GRN_No)
        </td>
        <td  class="text-center">
            @Html.DisplayFor(modelItem => item.StockBalance)
        </td>

        <td class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id=item.EquipmentInventoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EquipmentInventoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EquipmentInventoryID })
        </td>
    </tr>
}

</table>

</div>
