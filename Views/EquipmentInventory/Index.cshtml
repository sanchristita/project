    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="table-responsive">
<table class="table table-striped">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Equipments.EquipmentName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentOrderDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EquipmentOrderNo)
