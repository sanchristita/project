@model IEnumerable<ChemisTrackCrud.Models.WasteManagementModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-radioactive padd-right icon-big " padd-right"></span> Waste Management</h2>

<p class="text-right pull-right">
    @Html.ActionLink("Print Label", "PrintLabel", null, new {@class="btn btn-info"})
    @Html.ActionLink("Stocks", "Index", "ChemicalInventory", null, new {@class="btn btn-success"})
    @Html.ActionLink("Return to Home", "Index", "Home", null, new {@class="btn btn-default"})
</p>

<div class="table-responsive clear-all">
    <table  class="table table-striped table-bordered">
        <tr>
            <th class="text-center">
                Waste management ID
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ChemicalName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.HazardousWaste)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.GRN_No)
            </th>
            <th></th>
        </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.WasteManagementID)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ChemicalName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.HazardousWaste)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.GRN_No)
        </td>
        <td class="text-center icon-padd-top">
            <a href="@Url.Action("Details", new { id=item.WasteManagementID })" class="actions"><span class="icon-details icon-big"></span></a>&nbsp&nbsp
            <a href="@Url.Action("Delete", new { id=item.WasteManagementID })" class="actions"><span class="icon-delete icon-big"></span></a>
        </td>
    </tr>
}

</table>
