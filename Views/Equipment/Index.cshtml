    ViewBag.Title = "Index";
}

<h2 class="item-title"><span class="icon-inventory padd-right"></span>Equipments</h2>


<p class="text-right pull-right">
    @Html.ActionLink("Add Equipment", "Create", null, new {@class="btn btn-info"})
